<div class="windowLogin">
    <div class="logo">
       <div class="title p-3">
           <h3>Cadastre-se e se conecte!</h3>
       </div>
    </div>
    <div class="login">
        <div class="mb-3">
            <h3>Faça seu Cadastro!</h3>
        </div>
        <form action="/user/register" method="post">
            <div class="mb-3">
                <label for="username">Nome de usuário:</label>
                <div class="inputContent">
                    <span class="material-symbols-outlined iconForm">
                        person
                    </span>
                    <input type="text" required class="form-control" placeholder="Seu nome de usuário" name="username" id="username">
                </div>
            </div>
            <div class="mb-3">
                <label for="email">E-mail:</label>
                <div class="inputContent">
                    <span class="material-symbols-outlined iconForm">
                        mail
                    </span>
                    <input type="email" required class="form-control" placeholder="Seu E-mail..." name="email" id="email">
                </div>
            </div>
            <div class="mb-3">
                <label for="password">Senha:</label>
                <div class="inputContent">
                    <span class="material-symbols-outlined iconForm">
                        lock
                    </span>
                    <input required type="password" class="form-control" placeholder="Sua Senha..." name="password" id="password">
            
                </div>
            </div>
            <div class="mb-3">
                <label for="password">Repita a senha:</label>
                <div class="inputContent">
                    <span class="material-symbols-outlined iconForm">
                        lock
                    </span>
                    <input type="password" class="form-control" placeholder="Repita a senha informada" name="passwordRep" id="password">
            
                </div>
            </div>
            <div class="mb-3">
                <label for="birth">Data de nascimento:</label>
                <div class="inputContent">
                    <span class="material-symbols-outlined iconForm">
                        <span class="material-symbols-outlined">
                            calendar_month
                        </span>
                    </span>
                    <input required type="date" class="form-control" placeholder="Repita a senha informada" name="birth" id="birth">
            
                </div>
            </div>
            <div class="btns">
                <a href="/">
                    <button type="button" class="btnAction">Login</button>
                </a>
                <button type="submit" class="btnAction">Cadastro</button>
            </div>
        </form>
    </div>
</div>